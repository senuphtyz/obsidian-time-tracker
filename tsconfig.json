{
  "compilerOptions": {
    "types": [
      "node"
    ],
    "jsx": "react-jsx",
    "baseUrl": ".",
    "module": "ESNext",
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
} 